import math; 

// define a function that converts Celsius to Fahrenheit
func celsius_to_fahrenheit(celsius):
    return celsius * 1.8f + 32f; 

// Define a function that converts Celsius to Kelvin
func celsius_to_kelvin(celsius): 
    return celsius + 273.15f; 
    /* + is an operator that performs addition
 273.15 is a constant value of type float */

// Ask the user to enter a temperature in Celsius
float celsius = float(ask("Enter a temperature in Celsius: ")); 

float fahrenheit = celsius_to_fahrenheit(celsius);
float kelvin = celsius_to_kelvin(celsius); 
display("The temperature in Fahrenheit is ", fahrenheit);
display("The temperature in Kelvin is", kelvin);

